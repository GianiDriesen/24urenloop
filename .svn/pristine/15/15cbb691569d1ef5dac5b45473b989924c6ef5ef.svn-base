<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin_lap_edit_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="be.industria.industria24u.industria24u.editors.AdminLapEditActivity"
    tools:showIn="@layout/admin_lap_edit_container">
    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <TextView
                android:text="@string/edit_info"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:id="@+id/edit_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_red_light"
                android:translationY="8dp"
                android:textStyle="normal|bold"
                android:textAlignment="center" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:weightSum="1">
            <TextView
                android:text="@string/start_date"
                android:layout_height="match_parent"
                android:translationX="15dp"
                android:translationY="10dp"
                android:layout_width="120dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textAlignment="center" />
            <EditText
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/day"
                android:textSize="14sp"
                android:inputType="number"
                android:textAlignment="center"
                android:hint="@string/dd"
                android:layout_width="35dp" />

            <TextView
                android:text="@string/streepje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/month"
                android:textSize="14sp"
                android:inputType="number"
                android:hint="@string/mm"
                android:layout_width="35dp" />

            <TextView
                android:text="@string/streepje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/year"
                android:textSize="14sp"
                android:inputType="number"
                android:textAlignment="center"
                android:hint="@string/yy"
                android:layout_width="45dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:weightSum="1">
            <TextView
                android:text="@string/starts_at"
                android:layout_height="match_parent"
                android:translationX="15dp"
                android:translationY="10dp"
                android:layout_width="120dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textAlignment="center" />
            <EditText
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/beginHours"
                android:textSize="14sp"
                android:inputType="number"
                android:textAlignment="center"
                android:hint="@string/hh"
                android:layout_width="35dp" />

            <TextView
                android:text=":"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/beginMinutes"
                android:textSize="14sp"
                android:inputType="number"
                android:textAlignment="center"
                android:hint="mm"
                android:layout_width="35dp" />

            <TextView
                android:text=":"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/beginSeconds"
                android:textSize="14sp"
                android:inputType="number"
                android:textAlignment="center"
                android:hint="ss"
                android:layout_width="35dp" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:weightSum="1">
            <TextView
                android:text="End Date"
                android:layout_height="match_parent"
                android:translationX="15dp"
                android:translationY="10dp"
                android:layout_width="120dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textAlignment="center" />

            <EditText
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/endDay"
                android:textSize="14sp"
                android:inputType="number"
                android:textAlignment="center"
                android:hint="DD"
                android:layout_width="35dp" />

            <TextView
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/endMonth"
                android:textSize="14sp"
                android:inputType="number"
                android:textAlignment="center"
                android:hint="MM"
                android:layout_width="35dp" />

            <TextView
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/endYear"
                android:textSize="14sp"
                android:inputType="number"
                android:textAlignment="center"
                android:hint="YY"
                android:layout_width="45dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:weightSum="1">
            <TextView
                android:text="@string/ends_at"
                android:layout_height="match_parent"
                android:translationX="15dp"
                android:translationY="10dp"
                android:layout_width="120dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textAlignment="center" />
            <EditText
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/endHours"
                android:textSize="14sp"
                android:inputType="number"
                android:textAlignment="center"
                android:hint="hh"
                android:layout_width="35dp" />

            <TextView
                android:text=":"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/endMinutes"
                android:textSize="14sp"
                android:inputType="number"
                android:textAlignment="center"
                android:hint="mm"
                android:layout_width="35dp" />

            <TextView
                android:text=":"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/endSeconds"
                android:textSize="14sp"
                android:inputType="number"
                android:textAlignment="center"
                android:hint="ss"
                android:layout_width="35dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:weightSum="1">
            <TextView
                android:text="@string/first_name"
                android:layout_height="match_parent"
                android:id="@+id/firstNameDescr"
                android:translationX="15dp"
                android:translationY="10dp"
                android:layout_width="120dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textAlignment="center" />

            <EditText
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/runnerFirstName"
                android:textSize="14sp"
                android:inputType="textPersonName"
                android:hint="Fill here person's first name"
                android:layout_width="200dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp">
            <TextView
                android:text="@string/last_name"
                android:layout_height="match_parent"
                android:id="@+id/lastNameDescr"
                android:translationX="15dp"
                android:translationY="10dp"
                android:layout_width="120dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textAlignment="center" />
            <EditText
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/runnerLastName"
                android:textSize="14sp"
                android:hint="Fill here person's last name"
                android:layout_width="200dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <TextView
                android:text="--- or ---"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textAppearance="@style/TextAppearance.AppCompat" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/e_mail"
                android:layout_height="match_parent"
                android:id="@+id/eMailDescr"
                android:translationX="15dp"
                android:translationY="10dp"
                android:layout_width="120dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textAlignment="center" />
            <EditText
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/runnerEMail"
                android:textSize="14sp"
                android:hint="Fill here person's e-mail"
                android:layout_width="200dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button
                android:text="@string/confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/confirmButton"
                android:textAlignment="center"
                android:layout_weight="1"
                android:onClick="updateLap" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>