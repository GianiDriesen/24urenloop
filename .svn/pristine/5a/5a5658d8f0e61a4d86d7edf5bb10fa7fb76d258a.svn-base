<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/runner_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        app:srcCompat="@drawable/ic_industriashield"
        android:id="@+id/imageView7"
        android:contentDescription="@string/industria_shield"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:scaleType="matrix"
        android:translationY="-80dp"
        android:cropToPadding="false"
        android:adjustViewBounds="true"
        android:layout_width="500dp"
        android:layout_height="700dp"
        android:layout_marginEnd="-40dp"
        android:translationX="-20dp"
        android:layout_marginRight="-40dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:gravity="bottom"
        android:translationY="-80dp">

        <Button
            android:text="@string/open_app"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:onClick="openApp"
            android:layout_gravity="center_horizontal"
            android:layout_width="240dp" />

        <Button
            android:text="@string/real_time_standings1"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_width="240dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
