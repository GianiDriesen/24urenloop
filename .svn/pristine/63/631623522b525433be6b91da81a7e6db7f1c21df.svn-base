<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/runner_content_my_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="be.industria.industria24u.industria24u.RunnerMyProfileEditActivity"
    tools:showIn="@layout/runner_my_profile_edit_container">
    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <TextView
                android:text="Edit your info here!"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:id="@+id/personalLayer"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_red_light"
                android:translationY="8dp"
                android:textStyle="normal|bold"
                android:textAlignment="center" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:weightSum="1">
            <TextView
                android:text="@string/first_name"
                android:layout_height="match_parent"
                android:id="@+id/firstNameDescr"
                android:translationX="15dp"
                android:translationY="10dp"
                android:layout_width="120dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textAlignment="center" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/myFirstName"
                android:textSize="14sp"
                android:layout_weight="1"
                android:inputType="textPersonName"
                android:hint="hint" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp">

            <TextView
                android:text="@string/last_name"
                android:layout_height="match_parent"
                android:id="@+id/lastNameDescr"
                android:translationX="15dp"
                android:translationY="10dp"
                android:layout_width="120dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textAlignment="center" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/myLastName"
                android:layout_weight="1"
                android:textSize="14sp"
                android:hint="hint" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp">

            <TextView
                android:text="@string/e_mail"
                android:layout_height="match_parent"
                android:id="@+id/eMailDescr"
                android:translationX="15dp"
                android:translationY="10dp"
                android:layout_width="120dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textAlignment="center" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/myEMail"
                android:layout_weight="1"
                android:textSize="14sp"
                android:hint="hint" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp">

            <TextView
                android:text="@string/phone_number"
                android:layout_height="match_parent"
                android:id="@+id/phoneNumberDescr"
                android:translationX="15dp"
                android:translationY="10dp"
                android:layout_width="120dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textAlignment="center" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/myPhoneNumber"
                android:layout_weight="1"
                android:textSize="14sp"
                android:inputType="phone"
                android:hint="hint" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:weightSum="1">

            <TextView
                android:text="@string/birthday"
                android:layout_height="match_parent"
                android:id="@+id/birthdayDescr"
                android:translationX="15dp"
                android:translationY="10dp"
                android:layout_width="120dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textAlignment="center" />

            <EditText
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/myBirthDay"
                android:textSize="14sp"
                android:inputType="number"
                android:layout_weight="0.08"
                android:textAlignment="center"
                android:layout_width="85dp"
                android:hint="hint" />

            <EditText
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/myBirthMonth"
                android:textSize="14sp"
                android:inputType="number"
                android:layout_weight="0.03"
                android:textAlignment="center"
                android:layout_width="85dp"
                android:hint="hint" />

            <EditText
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/myBirthYear"
                android:textSize="14sp"
                android:inputType="number"
                android:layout_weight="0.05"
                android:textAlignment="center"
                android:layout_width="85dp"
                android:hint="hint" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:weightSum="1">

            <TextView
                android:text="@string/e_mail_notifications"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textAlignment="center"
                android:id="@+id/eNotificationDescr"
                android:translationX="15dp"
                android:translationY="10dp"
                android:layout_weight="1" />

            <CheckBox
                android:layout_height="wrap_content"
                android:id="@+id/isENotifications"
                android:checked="false"
                android:layout_width="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:weightSum="1">

            <TextView
                android:text="@string/push_notifications"
                android:layout_height="match_parent"
                android:id="@+id/pNotificationDescr"
                android:translationX="15dp"
                android:translationY="10dp"
                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textAlignment="center"
                android:layout_weight="1" />

            <CheckBox
                android:layout_height="match_parent"
                android:id="@+id/isPNotifications"
                android:checked="false"
                android:layout_width="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:text="Confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/confirmNewProfile"
                android:textAlignment="center"
                android:layout_weight="1"
                android:onClick="updateMyProfile"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>