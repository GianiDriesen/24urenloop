<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin_lap_create_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="be.industria.industria24u.industria24u.editors.AdminLapCreateActivity"
    tools:showIn="@layout/admin_lap_create_container">
    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <TextView
                android:text="@string/fill_info"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:id="@+id/fill_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_red_light"
                android:translationY="8dp"
                android:textStyle="normal|bold"
                android:textAlignment="center" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:weightSum="1">
            <TextView
                android:text="@string/date"
                android:layout_height="match_parent"
                android:translationX="15dp"
                android:translationY="10dp"
                android:layout_width="120dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textAlignment="center" />
            <EditText
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/day"
                android:textSize="14sp"
                android:inputType="number"
                android:layout_weight="0.08"
                android:textAlignment="center"
                android:layout_width="85dp"
                android:hint="@string/day" />
            <EditText
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/month"
                android:textSize="14sp"
                android:inputType="number"
                android:layout_weight="0.03"
                android:textAlignment="center"
                android:layout_width="85dp"
                android:hint="@string/month" />
            <EditText
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/year"
                android:textSize="14sp"
                android:inputType="number"
                android:layout_weight="0.05"
                android:textAlignment="center"
                android:layout_width="85dp"
                android:hint="@string/year" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:weightSum="1">
            <TextView
                android:text="@string/starts_at"
                android:layout_height="match_parent"
                android:translationX="15dp"
                android:translationY="10dp"
                android:layout_width="120dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textAlignment="center" />
            <EditText
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/beginHours"
                android:textSize="14sp"
                android:inputType="number"
                android:layout_weight="0.08"
                android:textAlignment="center"
                android:layout_width="85dp"
                android:hint="@string/hours" />
            <EditText
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/beginMinutes"
                android:textSize="14sp"
                android:inputType="number"
                android:layout_weight="0.03"
                android:textAlignment="center"
                android:layout_width="85dp"
                android:hint="@string/minutes" />
            <EditText
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/beginSeconds"
                android:textSize="14sp"
                android:inputType="number"
                android:layout_weight="0.03"
                android:textAlignment="center"
                android:layout_width="85dp"
                android:hint="@string/seconds" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:weightSum="1">
            <TextView
                android:text="@string/if_necessary"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textAlignment="center" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:weightSum="1">
            <TextView
                android:text="@string/date"
                android:layout_height="match_parent"
                android:translationX="15dp"
                android:translationY="10dp"
                android:layout_width="120dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textAlignment="center" />
            <EditText
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/endDay"
                android:textSize="14sp"
                android:inputType="number"
                android:layout_weight="0.08"
                android:textAlignment="center"
                android:layout_width="85dp"
                android:hint="@string/day" />
            <EditText
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/endMonth"
                android:textSize="14sp"
                android:inputType="number"
                android:layout_weight="0.03"
                android:textAlignment="center"
                android:layout_width="85dp"
                android:hint="@string/month" />
            <EditText
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/endYear"
                android:textSize="14sp"
                android:inputType="number"
                android:layout_weight="0.05"
                android:textAlignment="center"
                android:layout_width="85dp"
                android:hint="@string/year" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:weightSum="1">
            <TextView
                android:text="@string/ends_at"
                android:layout_height="match_parent"
                android:translationX="15dp"
                android:translationY="10dp"
                android:layout_width="120dp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textAlignment="center" />
            <EditText
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/endHours"
                android:textSize="14sp"
                android:inputType="number"
                android:layout_weight="0.08"
                android:textAlignment="center"
                android:layout_width="85dp"
                android:hint="@string/hours" />
            <EditText
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/endMinutes"
                android:textSize="14sp"
                android:inputType="number"
                android:layout_weight="0.03"
                android:textAlignment="center"
                android:layout_width="85dp"
                android:hint="@string/minutes" />
            <EditText
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/endSeconds"
                android:textSize="14sp"
                android:inputType="number"
                android:layout_weight="0.03"
                android:textAlignment="center"
                android:layout_width="85dp"
                android:hint="@string/seconds" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button
                android:text="@string/confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/confirmButton"
                android:textAlignment="center"
                android:layout_weight="1"
                android:onClick="insertLap" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>